        {%- assign scrollable = false -%}
      {%- endif -%}
    {%- when 'medium' -%}
      {%- assign grid_item_width = 'grid-product--medium' -%}
    {%- when 'large' -%}
      {%- assign grid_item_width = 'grid-product--large' -%}
  {%- endcase -%}

